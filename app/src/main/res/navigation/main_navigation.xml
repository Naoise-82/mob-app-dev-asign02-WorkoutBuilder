<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_navigation"
    app:startDestination="@id/exerciseListFragment">

    <fragment
        android:id="@+id/exerciseFragment"
        android:name="org.wit.workoutbuilder.fragments.ExerciseFragment"
        android:label="@string/action_exercise"
        tools:layout="@layout/fragment_exercise">
        <action
            android:id="@+id/action_exerciseFragment_to_exerciseListFragment"
            app:destination="@id/exerciseListFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/exerciseListFragment"
        android:name="org.wit.workoutbuilder.fragments.ExerciseListFragment"
        android:label="@string/action_exerciseList"
        tools:layout="@layout/fragment_exercise_list" >
        <action
            android:id="@+id/action_exerciseListFragment_to_exerciseFragment"
            app:destination="@id/exerciseFragment"
            app:enterAnim="@anim/nav_default_enter_anim"
            app:exitAnim="@anim/nav_default_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/workoutFragment"
        android:name="org.wit.workoutbuilder.fragments.WorkoutFragment"
        android:label="@string/action_workout"
        tools:layout="@layout/fragment_workout" >
        <action
            android:id="@+id/action_workoutFragment_to_workoutListFragment2"
            app:destination="@id/workoutListFragment" />
    </fragment>
    <fragment
        android:id="@+id/workoutListFragment"
        android:name="org.wit.workoutbuilder.fragments.WorkoutListFragment"
        android:label="@string/action_workoutList"
        tools:layout="@layout/fragment_workout_list" >
        <action
            android:id="@+id/action_workoutListFragment_to_workoutFragment2"
            app:destination="@id/workoutFragment" />
    </fragment>
</navigation>